{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/styles/*": ["styles/*"],
      "@/images/*": ["images/*"]
    }
  },
  "include": ["src/**/*", "styles/**/*"],
  "exclude": ["node_modules", "dist"]
}
